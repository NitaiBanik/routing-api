PORT=3000
LOG_LEVEL=info

# Application API endpoints
API_1=http://localhost:8080
API_2=http://localhost:8081
API_3=http://localhost:8082

# Load balancer configuration
BALANCER_TYPE=round-robin

# Health check configuration
HEALTH_CHECK_INTERVAL=5s

# Circuit breaker configuration
MAX_FAILURES=5
CIRCUIT_TIMEOUT=30s
RESET_TIMEOUT=60s
SLOW_THRESHOLD=5s
MAX_SLOW_COUNT=3

# Retry configuration
MAX_RETRIES=3
RETRY_DELAY=100ms

# HTTP client timeouts
REQUEST_TIMEOUT=30s
CONNECT_TIMEOUT=5s
RESPONSE_TIMEOUT=25s